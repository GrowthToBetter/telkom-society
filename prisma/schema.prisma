generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

enum Role {
  SISWA
  GURU
  ADMIN
}

model User {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  email         String  @unique
  name          String
  password      String?
  photo_profile String
  role          Role
  timMembers    Tim[]
}

model Tim {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  photo       String
  members     User[]
}
